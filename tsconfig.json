{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "components/*": ["components/*"],
      "screens/*": ["screens/*"],
      "navigation/*": ["navigation/*"],
      "store/*": ["store/*"],
      "api/*" : ["api/*"],
      "styles/*" : ["styles/*"],
      "assets/*" : ["assets/*"],
      "container/*" : ["containers/*"],
      "tests/*": ["tests/*"]
    }
  }
}
